<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="EditText" parent="AppTheme">
        <item name="colorControlNormal">@color/ma.editText_normal</item>
        <item name="colorControlActivated">@color/ma.editText_focus</item>
    </style>

    <style name="MarkerViewContainer">
        <item name="android:layout_marginTop">@dimen/indent_normal</item>
        <item name="android:layout_marginRight">@dimen/indent_medium</item>
        <item name="android:layout_marginLeft">@dimen/indent_medium</item>
    </style>

    <style name="MarkerDialogContainer">
        <item name="android:paddingTop">@dimen/indent_small</item>
        <item name="android:paddingLeft">@dimen/indent_medium</item>
        <item name="android:paddingRight">@dimen/indent_medium</item>
        <item name="android:paddingBottom">@dimen/indent_small</item>
    </style>

</resources>
